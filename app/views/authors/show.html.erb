<div class="contianer">
  <h1> <%= @author.name %></h1>
  <p>list posts by this author here</p>
  <% @author.posts.each do |post| %>
    <%= post.title %>
    <div>
      <%= post.body%>
    </div>
    <%= post.published_at %>
  <% end %>
  <%= link_to "Home", authors_path, class: 'btn btn-primary mt-3' %>
  <div class="post-form">
    <h2>Write a new post</h2>
    <%= simple_form_for [@author, @post] do |f| %>
      <%= f.input :title %>
      <%= f.input :body %>
      <%= f.input :published_at %>
      <%= f.submit "Submit", class: 'btn btn-primary mt-3' %>
    <% end %>
  </div>
</div>
